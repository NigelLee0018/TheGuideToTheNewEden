<Page
    x:Class="TheGuideToTheNewEden.WinUI.Views.IntelOverlapPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TheGuideToTheNewEden.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Transparent"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid x:Name="mapGrid" Margin="0,-12,0,0">
            <Canvas x:Name="lineCanvas" />
            <Canvas x:Name="tempCanvas" />
            <Canvas x:Name="mapCanvas" />
            <TextBlock x:Name="tipTextBlock" Visibility="Collapsed" />
        </Grid>
        <TextBlock
            x:Name="infoTextBlock"
            Grid.Row="1"
            Margin="10,2"
            HorizontalAlignment="Center"
            Visibility="Visible" />
    </Grid>
</Page>
